<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:background="@drawable/button_back"
    android:padding="15dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_twotone_account_circle_24"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/txt_name"
                android:text="Full Name"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#717070"
                android:id="@+id/txt_date"
                android:text="date"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#B50E0E"
                android:id="@+id/txt_status"
                android:text="status"

                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>


    <View
        android:layout_marginHorizontal="2dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_approve"
            android:text="Approve"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="@null"
            android:drawableLeft="@drawable/ic_baseline_check_circle_24"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:text="Reject"
            android:id="@+id/btn_reject"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="@null"
            android:drawableLeft="@drawable/ic_baseline_cancel_24"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_call"
            android:text="Call"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="@null"
            android:drawableLeft="@drawable/ic_baseline_call_24"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>






</androidx.appcompat.widget.LinearLayoutCompat>